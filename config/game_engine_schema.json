{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SceneEnvelope",
  "type": "object",
  "properties": {
    "scene": {
      "type": "object",
      "properties": {
        "room_name": { "type": ["string", "null"] },
        "description": { "type": ["string", "null"] },
        "visible_items": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "scene_items": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "current_items": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "scene_actions": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "action_records": {
          "type": ["array", "null"],
          "description": "Structured log of every turn's command/result pair, used for item/inventory tracking",
          "items": { "$ref": "#/definitions/ActionRecord" }
        },
        "scene_intro_collection": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "previous_room": { "type": ["string", "null"] },
              "move_number": { "type": ["integer", "null"] },
              "command": { "type": ["string", "null"] }
            },
            "additionalProperties": false
          }
        },
        "npcs": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "narrations": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "visit_count": { "type": ["integer", "null"] },
        "first_visit_turn": { "type": ["integer", "null"] },
        "last_visit_turn": { "type": ["integer", "null"] }
      },
      "required": ["room_name"],
      "additionalProperties": true
    },
    "engine_turn": {
      "$ref": "#/definitions/EngineTurn"
    }
  },
  "required": ["scene", "engine_turn"],
  "additionalProperties": false,
  "definitions": {
    "ActionRecord": {
      "type": "object",
      "description": "Authoritative representation of a single player command and its inferred effects",
      "properties": {
        "turn": { "type": "integer", "description": "Absolute turn number when the command was issued" },
        "command": { "type": "string", "description": "Raw player input" },
        "result": { "type": "string", "description": "Normalized summary of the engine response" },
        "category": {
          "type": "string",
          "enum": [
            "movement",
            "item_interaction",
            "world_object_interaction",
            "generic_interaction"
          ],
          "description": "movement when the room changes, item_interaction for inventory-affecting commands, world_object_interaction for verbs like open/look/examine, generic_interaction otherwise"
        },
        "verb": { "type": "string", "description": "Parsed root verb (take, drop, look, etc.)" },
        "target_item": { "type": ["string", "null"], "description": "Optional normalized item or object acted upon" }
      },
      "required": ["turn", "command", "result", "category", "verb"],
      "additionalProperties": false
    },
    "PlayerState": {
      "type": "object",
      "properties": {
        "inventory": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "score": { "type": ["integer", "null"] },
        "moves": { "type": ["integer", "null"] }
      },
      "additionalProperties": true
    },
    "EngineTurn": {
      "type": "object",
      "properties": {
        "command": { "type": "string" },
        "transcript": { "type": "string" },
        "room_name": { "type": ["string", "null"] },
        "description": { "type": ["string", "null"] },
        "visible_items": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "player_state": { "$ref": "#/definitions/PlayerState" },
        "timestamp": { "type": "string", "format": "date-time" },
        "pid": { "type": ["integer", "null"] },
        "status_code": { "type": ["integer", "null"] },
        "gameException": { "type": ["boolean", "null"] },
        "exceptionMessage": { "type": ["string", "null"] }
      },
      "required": ["command", "transcript"],
      "additionalProperties": true
    }
  }
}
